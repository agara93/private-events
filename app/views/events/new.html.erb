<h1>Create Event</h1>

<div class = "row">
    <div class = "col-md-6 col-md-offset-3">
        <%= form_for(@event) do |f| %>
            <%= f.text_filed :title %>
            <%= f.text_field :location %>
            <%= f.text_area :description %>
            <%= f.date_field :date %>
            
            <%= f.submit "Create Event", class: "btn btn-lg btn-primary" %>
        <% end %>
    </div>
</div>

