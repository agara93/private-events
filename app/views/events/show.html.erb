<h1><%= @event.title %></h1>

<% if signed_in? %>
    <div class = "text-center"><%= render 'attend_form' %></div>
<% end %>

<p><b>location: </b><%= @event.location %></p>
<p><b>host: </b><%= @event.creator.name %></p>

<p><%= @event.description %></p>

</br>

<b>Who's Going:</b>

<ol>
<% @event.attendees.each do |attendee| %>
    <li><%= link_to attendee.name, attendee %></li>
<% end %>
</ol>
    
    
    

